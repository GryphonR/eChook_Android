<!--merge xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context="com.ben.drivenbluetooth.MainActivity"-->

<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/main"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.ben.echookcompanion.MainActivity"
		android:background="@color/background_material_light">

		<android.support.design.widget.FloatingActionButton
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:cropToPadding="false"
            android:onClick="OpenBT"
            android:src="@drawable/ic_bluetooth_connected_black_24dp"
            android:text="Open BT"
            app:backgroundTint="@color/bt_connect"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/open"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/open"
            android:layout_toRightOf="@+id/open"
            android:onClick="CloseBT"
            android:src="@drawable/ic_bluetooth_disabled_black_24dp"
            android:text="Close BT"
            app:backgroundTint="@color/bt_disconnect"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/close"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/close"
            android:layout_toRightOf="@+id/close"
            android:onClick="LaunchSettings"
            android:src="@drawable/mr_ic_settings_light"
            android:text="Settings"
            app:backgroundTint="@color/settings"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/stop"
            android:layout_toStartOf="@+id/stop"
            android:longClickable="true"
            android:onClick="Start"
            android:src="@drawable/mr_ic_play_light"
            android:text="Log"
            android:textStyle="bold"
            app:backgroundTint="@color/play"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"

            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:onClick="Stop"
            android:src="@drawable/mr_ic_pause_light"
            android:text="Stop"
            app:backgroundTint="@color/pause"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnSettings"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/btnSettings"
            android:onClick="Cycle"
            android:src="@drawable/mr_ic_media_route_mono_light"
            android:text="Cycle"
            app:backgroundTint="@color/cycle"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnLaunchMode"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/cycle"
            android:onClick="LaunchMode"
            android:src="@drawable/ic_flight_takeoff_black_24dp"
            app:backgroundTint="@color/launchmode"
            app:fabSize="mini"/>

		<TextView
            android:id="@+id/txt_Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/start"
            android:layout_alignParentBottom="false"
            android:layout_alignTop="@+id/start"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/start"
            android:gravity="center_vertical"
            android:onClick="QuickChangeMode"
            android:text="DEMO"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

		<TextView
            android:id="@+id/txtDataFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:text="arduino.csv"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

		<TextView
            android:id="@+id/txtDataFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtDataFileName"
            android:layout_toRightOf="@+id/txtDataFileName"
            android:text="##kb"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

		<TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/txtBTState"
            android:gravity="right"
            android:text="Bluetooth"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

		<TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBTState"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txtBTState"
            android:gravity="right"
            android:text="Logging"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

		<TextView
            android:id="@+id/txtBTState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:text="RECONNECTING"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

		<TextView
            android:id="@+id/txtLogging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:text="LOGGING"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

		<RelativeLayout
            android:id="@+id/CenterView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/open"
            android:layout_alignEnd="@+id/txt_Mode"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:gravity="center">

		</RelativeLayout>

		<Chronometer
            android:id="@+id/LapTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CenterView"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|right"
            android:text="00:00"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="monospace"/>

		<TextView
            android:id="@+id/previousLapTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/LapTimer"
            android:layout_below="@+id/LapTimer"
            android:gravity="right"
            android:text="##:##"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:typeface="monospace"/>

		<TextView
            android:id="@+id/lap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/CenterView"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/LapTimer"
            android:gravity="center_vertical"
            android:onClick="CrossFinishLine"
            android:text="##"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:typeface="monospace"/>

		<TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/CenterView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="25sp"
            android:textStyle="bold"/>

		<TextView
            android:id="@+id/txtBTCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/CenterView"
            android:layout_alignParentStart="true"
            android:ellipsize="middle"
            android:text="BTDEVICE :: VEHICLE"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

	</RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackbarPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </android.support.design.widget.CoordinatorLayout>

	<FrameLayout android:id="@+id/overlay"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@color/background_material_light"
                 android:visibility="visible">
	</FrameLayout>
</merge>
