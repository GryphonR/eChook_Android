<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.driven.rowan.drivenbluetooth.MainActivity"
    android:id="@+id/main">

    <TextView android:text="Label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:layout_alignRight="@+id/close"
        android:layout_alignEnd="@+id/close"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:editable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/open"
        android:layout_alignTop="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/send"
        android:layout_alignTop="@+id/close"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/close"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/label"
        android:layout_alignRight="@+id/open"
        android:layout_alignEnd="@+id/open" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry"
        android:layout_below="@+id/label"
        android:layout_alignLeft="@+id/label"
        android:layout_alignStart="@+id/label"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/close"
        android:layout_alignEnd="@+id/close"
        android:text="Entry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incoming"
        android:lines="4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/speed"
        android:editable="false"
        android:inputType="text"
        android:layout_alignLeft="@+id/speed"
        android:layout_alignStart="@+id/speed"
        android:layout_below="@+id/entry"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Speed"
        android:id="@+id/textView"
        android:layout_marginBottom="150dp"
        android:layout_above="@+id/open"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/send"
        android:layout_alignEnd="@+id/send"
        android:layout_toRightOf="@+id/open"
        android:layout_toEndOf="@+id/open" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Voltage"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/voltage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voltage"
        android:layout_below="@+id/speed"
        android:layout_alignLeft="@+id/speed"
        android:layout_alignStart="@+id/speed"
        android:layout_alignRight="@+id/speed"
        android:layout_alignEnd="@+id/speed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/current"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current"
        android:layout_below="@+id/voltage"
        android:layout_alignLeft="@+id/voltage"
        android:layout_alignStart="@+id/voltage"
        android:layout_alignRight="@+id/voltage"
        android:layout_alignEnd="@+id/voltage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raw Data In:"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/incoming"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
