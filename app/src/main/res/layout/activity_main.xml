<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:tools="http://schemas.android.com/tools"
					xmlns:custom="http://schemas.android.com/apk/res-auto"
					android:layout_width="match_parent"
					android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
					android:paddingRight="@dimen/activity_horizontal_margin"
					android:paddingTop="@dimen/activity_vertical_margin"
					android:paddingBottom="@dimen/activity_vertical_margin"
					tools:context="com.ben.drivenbluetooth.MainActivity"
					android:id="@+id/main">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:text="Open BT"
			android:id="@+id/open"
			android:layout_alignParentBottom="true"
			android:layout_alignParentStart="true"
			android:onClick="OpenBT"
			android:layout_alignParentLeft="true"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Close BT"
			android:id="@+id/close"
			android:layout_alignParentBottom="true"
			android:layout_toRightOf="@+id/open"
			android:layout_toEndOf="@+id/open"
			android:onClick="CloseBT"
			android:layout_alignTop="@+id/open"
			android:layout_alignBottom="@+id/open"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Settings"
			android:id="@+id/btnSettings"
			android:onClick="LaunchSettings"
			android:layout_alignParentBottom="true"
			android:layout_toEndOf="@+id/close"
			android:layout_toRightOf="@+id/close"
			android:layout_alignTop="@+id/close"
			android:layout_alignBottom="@+id/close"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Start"
			android:id="@+id/start"
			android:textStyle="bold"
			android:layout_alignParentBottom="true"
			android:layout_toLeftOf="@+id/stop"
			android:layout_toStartOf="@+id/stop"
			android:onClick="Start"
			android:layout_alignTop="@+id/stop"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Stop"
			android:id="@+id/stop"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:onClick="Stop"
			android:layout_alignTop="@+id/open"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cycle"
			android:id="@+id/cycle"
			android:layout_alignParentBottom="true"
			android:onClick="Cycle"
			android:layout_toEndOf="@+id/btnSettings"
			android:layout_alignBottom="@+id/btnSettings"
			android:layout_alignTop="@+id/btnSettings"/>





		<!-- **************************	-->
		<!--		 THROTTLE			-->
		<!-- **************************	-->

		<!-- **************************	-->
		<!--		 VOLTAGE			-->
		<!-- **************************	-->

		<!-- **************************	-->
		<!--		 CURRENT			-->
		<!-- **************************	-->

		<!-- **************************	-->
		<!--		 TEMP 1				-->
		<!-- **************************	-->

		<!-- **************************	-->
		<!--		 RPM				-->
		<!-- **************************	-->

		<!-- **************************	-->
		<!--		 SPEED				-->
		<!-- **************************	-->

		<!-- **************************	-->
		<!--		 something				-->
		<!-- **************************	-->

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/txt_Mode"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/txtDataFileName"
			android:layout_alignParentStart="true"
			android:layout_marginRight="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/txtDataFileSize"
			android:layout_alignBottom="@+id/txtDataFileName"
			android:layout_toRightOf="@+id/txtDataFileName"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Bluetooth"
			android:id="@+id/textView6"
			android:gravity="right"
			android:layout_marginRight="10dp"
			android:layout_alignParentTop="true"
			android:layout_alignStart="@+id/btnSettings"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Logging"
			android:id="@+id/textView8"
			android:gravity="right"
			android:layout_below="@+id/txtBTState"
			android:layout_marginRight="10dp"
			android:layout_toLeftOf="@+id/txtBTState"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/txtBTState"
			android:layout_alignTop="@+id/textView6"
			android:layout_toRightOf="@+id/textView6"
			android:gravity="left"
			android:textStyle="bold"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/txtLogging"
			android:textStyle="bold"
			android:layout_toRightOf="@+id/textView8"
			android:layout_alignTop="@+id/textView8"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/textView8"
			android:gravity="center"
			android:id="@+id/CenterView"
			android:layout_above="@+id/open"
			android:layout_alignEnd="@+id/txt_Mode"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="false" />

		<Chronometer
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/LapTimer"
			android:layout_alignParentTop="true"
			android:layout_alignStart="@+id/start"
			android:textColor="@color/secondary_text_default_material_light"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/previousLapTime"
			android:layout_below="@+id/LapTimer"
			android:layout_alignStart="@+id/LapTimer"/>

	</RelativeLayout>

	<FrameLayout android:id="@+id/graphview_overlay"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:visibility="visible"
				 android:background="@color/background_material_light">
	</FrameLayout>
</merge>
