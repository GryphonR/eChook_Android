<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
				android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context="com.driven.rowan.drivenbluetooth.MainActivity"
				android:id="@+id/main">

	<TextView android:text="Label" android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:id="@+id/label"
			  android:editable="false"
			  android:layout_alignParentTop="true"
			  android:layout_alignParentLeft="true"
			  android:layout_alignParentStart="true"
			  android:layout_marginTop="27dp"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Open BT"
		android:id="@+id/open"
		android:layout_above="@+id/start"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Start"
		android:id="@+id/start"
		android:layout_alignTop="@+id/close"
		android:layout_centerHorizontal="true" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Stop"
		android:id="@+id/stop"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Throttle"
		android:id="@+id/textView"
		android:gravity="center"
		android:editable="false"
		android:layout_alignEnd="@+id/throttle"
		android:layout_alignStart="@+id/throttle"
		android:layout_marginTop="60dp"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/throttle"
		android:inputType="none"
		android:width="80dp"
		android:gravity="center"
		android:editable="false"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="false"
		android:layout_below="@+id/textView"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Voltage"
		android:gravity="center"
		android:id="@+id/textView2"
		android:layout_alignTop="@+id/textView"
		android:layout_alignLeft="@+id/voltage"
		android:layout_alignRight="@+id/voltage"
		android:layout_alignBottom="@+id/textView"
		android:layout_alignEnd="@+id/voltage"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/voltage"
		android:gravity="center"
		android:singleLine="false"
		android:inputType="none"
		android:width="80dp"
		android:layout_alignTop="@+id/throttle"
		android:layout_toRightOf="@+id/throttle"
		android:layout_alignBottom="@+id/throttle"/>

	<com.driven.rowan.drivenbluetooth.DataBar
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
        android:layout_above="@+id/open"
		android:id="@+id/ThrottleBar"
        custom:BarColor="#000000"
        custom:min="0"
        custom:max="100"
        android:layout_alignRight="@+id/throttle"
        android:layout_below="@+id/current"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Current"
		android:gravity="center"
		android:id="@+id/textView3"
		android:layout_alignTop="@+id/textView2"
		android:layout_alignRight="@+id/current"
		android:layout_alignEnd="@+id/current"
		android:layout_alignLeft="@+id/current"
		android:layout_alignBottom="@+id/textView2"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/current"
		android:gravity="center"
		android:singleLine="false"
		android:inputType="none"
		android:width="80dp"
		android:layout_alignTop="@+id/voltage"
		android:layout_toRightOf="@+id/voltage"
		android:layout_alignBottom="@+id/voltage"/>

    <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/app_name"
		android:id="@+id/TitleTextView"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Close BT"
		android:id="@+id/close"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Temp 1"
		android:gravity="center"
		android:id="@+id/textView4"
		android:layout_alignBottom="@+id/textView3"
		android:layout_alignRight="@+id/temp1"
		android:layout_alignEnd="@+id/temp1"
		android:layout_alignLeft="@+id/temp1"
		android:layout_alignTop="@+id/textView3"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/temp1"
		android:gravity="center"
		android:singleLine="false"
		android:inputType="none"
		android:width="80dp"
		android:layout_alignTop="@+id/current"
		android:layout_toRightOf="@+id/current"
		android:layout_alignBottom="@+id/current"/>

    <EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/temp2"
		android:gravity="center"
		android:singleLine="false"
		android:inputType="none"
		android:width="80dp"
		android:layout_alignBottom="@+id/temp1"
		android:layout_toRightOf="@+id/temp1"
		android:layout_alignTop="@+id/temp1"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Temp 2"
		android:gravity="center"
		android:id="@+id/textView5"
		android:layout_alignTop="@+id/textView4"
		android:layout_alignLeft="@+id/temp2"
		android:layout_alignRight="@+id/temp2"
		android:layout_alignEnd="@+id/temp2"
		android:layout_alignBottom="@+id/textView4"/>

    <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Temp 3"
		android:gravity="center"
		android:id="@+id/textView7"
		android:layout_alignParentStart="false"
		android:layout_toRightOf="@+id/textView5"
		android:layout_alignBottom="@+id/textView5"
		android:layout_alignTop="@+id/textView5"
		android:layout_alignEnd="@+id/temp3"
		/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/temp3"
		android:gravity="center"
		android:singleLine="false"
		android:inputType="none"
		android:width="80dp"
		android:layout_alignBottom="@+id/temp2"
		android:layout_toRightOf="@+id/temp2"
		android:layout_alignTop="@+id/temp2"/>

    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Save"
		android:id="@+id/save"
		android:layout_alignBottom="@+id/open"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/txt_Mode"
		android:layout_alignTop="@+id/TitleTextView"
		android:layout_alignRight="@+id/save"
		android:layout_alignEnd="@+id/save"/>

</RelativeLayout>
