<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Vehicle"
        android:key="prefKeySettings">
        <ListPreference
            android:key="prefSpeedUnits"
            android:title="Speed unit"
            android:entries="@array/prefSpeedUnit"
            android:entryValues="@array/prefSpeedUnitValues"
            android:defaultValue="@string/prefSpeedUnitDefault"
			android:summary="%s"
            />
		<ListPreference
			android:key="prefMode"
			android:title="Mode"
			android:entries="@array/prefMode"
			android:entryValues="@array/prefModeValues"
			android:defaultValue="@string/prefModeDefault"
			android:summary="%s"
			/>
		<EditTextPreference
			android:key="prefCarName"
			android:title="Car name (used for logging)"
			android:summary="%s"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Sensors"
		android:key="prefKeySensors">
        <ListPreference
            android:key="prefLocation"
			android:title="Location tracking"
			android:entries="@array/prefLocation"
			android:entryValues="@array/prefLocationValues"
			android:defaultValue="Disabled"
			android:summary="%s"
			/>
		<ListPreference
			android:key="prefAccelerometer"
			android:title="Accelerometer"
			android:entries="@array/prefAccelerometer"
			android:entryValues="@array/prefAccelerometerValues"
			android:defaultValue="Disabled"
			android:summary="%s"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Bluetooth"
		android:key="prefKeyBluetooth">
		<EditTextPreference
			android:key="prefBTDeviceName"
			android:title="Bluetooth device name"
			android:summary="%s"
			/>
    </PreferenceCategory>
</PreferenceScreen>