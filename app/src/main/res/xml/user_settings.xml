<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
		android:title="Data logging"
		android:key="prefKeyLogging">
        <Preference
            android:key="prefShareLog"
            android:title="Share Logged Data"
            />
        <Preference
            android:key="prefClearLog"
            android:title="Clear Logfile"
            />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Bluetooth"
        android:key="prefKeyBluetooth">
        <ListPreference
            android:key="prefBTDeviceName"
            android:title="Bluetooth Device Name"
            android:summary="%s"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="App Settings"
        android:key="prefAppSettings">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefMode"
            android:title="Demo Mode" />
        <ListPreference
            android:key="prefSpeedUnits"
            android:title="Speed unit"
            android:entries="@array/prefSpeedUnit"
            android:entryValues="@array/prefSpeedUnitValues"
            android:defaultValue="0"
            android:summary="%s"
            />
        <ListPreference
            android:key="prefGraphs"
            android:title="Enable graphs (reduces performance if enabled)"
            android:entries="@array/prefGraphs"
            android:entryValues="@array/prefGraphsValues"
            android:defaultValue="1"
            android:summary="%s"
            />
        <EditTextPreference
            android:key="prefCarName"
            android:title="Car name (used for logging)"
            android:summary=""
            />
        </PreferenceCategory>
	<PreferenceCategory
        android:title="Gearing Settings"
        android:key="prefKeySettings">
        <EditTextPreference
            android:key="prefMotorTeeth"
            android:title="Motor sprocket teeth number"
            android:summary=""
            />
        <EditTextPreference
            android:key="prefWheelTeeth"
            android:title="Wheel teeth numbers (separate using commas)"
            android:summary=""
            />

	</PreferenceCategory>
	<PreferenceCategory
		android:title="Sensors"
		android:key="prefKeySensors">
        <ListPreference
            android:key="prefLocation"
			android:title="Location tracking"
			android:entries="@array/prefLocation"
			android:entryValues="@array/prefLocationValues"
			android:defaultValue="0"
			android:summary="%s"
			/>
	</PreferenceCategory>

    <PreferenceCategory
        android:title="Live Data (Testing Only)"
        android:key="prefKeyLiveData">
        <EditTextPreference
            android:key="prefUDP"
            android:title="Live data password"
            android:summary=""
            />
    </PreferenceCategory>
</PreferenceScreen>