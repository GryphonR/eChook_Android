<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Vehicle"
        android:key="prefKeySettings">
        <ListPreference
            android:key="prefSpeedUnits"
            android:title="Speed unit"
            android:entries="@array/prefSpeedUnit"
            android:entryValues="@array/prefSpeedUnitValues"
            android:defaultValue="0"
			android:summary="%s"
            />
		<ListPreference
			android:key="prefMode"
			android:title="Mode"
			android:entries="@array/prefMode"
			android:entryValues="@array/prefModeValues"
			android:defaultValue="0"
			android:summary="%s"
			/>
		<ListPreference
			android:key="prefGraphs"
			android:title="Enable graphs (reduces performance if enabled)"
			android:entries="@array/prefGraphs"
			android:entryValues="@array/prefGraphsValues"
			android:defaultValue="1"
			android:summary="%s"
			/>
		<EditTextPreference
			android:key="prefCarName"
			android:title="Car name (used for logging)"
			android:summary=""
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Sensors"
		android:key="prefKeySensors">
        <ListPreference
            android:key="prefLocation"
			android:title="Location tracking"
			android:entries="@array/prefLocation"
			android:entryValues="@array/prefLocationValues"
			android:defaultValue="0"
			android:summary="%s"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Bluetooth"
		android:key="prefKeyBluetooth">
		<EditTextPreference
			android:key="prefBTDeviceName"
			android:title="Bluetooth device name"
			android:summary=""
			/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Live Data"
        android:key="prefKeyLiveData">
        <EditTextPreference
            android:key="prefUDP"
            android:title="Live data password"
            android:summary=""
            />
    </PreferenceCategory>
</PreferenceScreen>